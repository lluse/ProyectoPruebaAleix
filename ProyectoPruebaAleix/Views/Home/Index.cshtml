@model ClientModel
@{
    ViewData["Title"] = "Home Page";
}

@section scripts {
    <link rel="stylesheet" href="~/css/bootstrap.css" />
    <script src="~/js/bootstrap.bundle.min.js"></script>
}



<div class="text-center">
    <h1 class="display-4">Clientes</h1>
    <table id="tabla_clientes" class="table table-striped table-bordered">
        <tr>
            <th>Nombre</th>
            <th>Apellidos</th>
            <th>Nif</th>
            <th>Correo</th>
            <th>Editar</th>
            <th>Eliminar</th>
        </tr>
        @foreach (var client in Model._clients)
        {
            <tr>
                <td>@client.Nombre</td>
                <td>@client.Apellidos</td>
                <td>@client.Nif</td>
                <td>@client.Email</td>
                <td><button class="btn btn-success">Editar</button></td>
                <td><button class="btn btn-danger">Eliminar</button></td>
            </tr>
        }
    </table>
    <button id="nuevoCliente" class="btn btn-primary float-right">Nuevo Cliente</button>
</div>
